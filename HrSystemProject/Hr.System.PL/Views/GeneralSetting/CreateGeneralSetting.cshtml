@model GeneralSettingViewModel
@{
    var Employees = new SelectList(ViewBag.Employees, "Id","Name");

}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-success">
                    <h4 class="card-title" id="horz-layout-basic">General Settings Form </h4>

                </div>
                <p class="mb-0">This is the basic horizontal form with labels on left and cost estimation form is the default position.</p>
            </div>
            <div class="card-body">
                <div class="px-3">
                    
                    <form asp-controller="GeneralSetting" asp-action="CreateGeneralSetting" class="form form-horizontal">
                        <div class="form-body">
                            <h4 class="form-section">
                                <i class="icon-user"></i>General information
                                
                                
                            </h4>
                            <div class="form-group row">
                                <label  class="col-md-3 label-control" for="projectinput9">Employee Name</label>
                                <div class="col-md-9">
                                    <select asp-for="@Model.GeneralSettings.EmployeeId" asp-items="Employees" id="projectinput9" class="form-control">
                                        <option>---  Select Employee Name  ---</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="@Model.GeneralSettings.OvertimeHours" class="col-md-3 label-control" for="projectinput1"></label>
                                <div class="col-md-9">
                                    <input asp-for="@Model.GeneralSettings.OvertimeHours" type="text" id="projectinput1" class="form-control" required>
                                </div>
                                <span asp-validation-for="@Model.GeneralSettings.OvertimeHours" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <label asp-for="@Model.GeneralSettings.DiscountHours" class="col-md-3 label-control" for="projectinput1"></label>
                                <div class="col-md-9">
                                    <input asp-for="@Model.GeneralSettings.DiscountHours" type="text" id="projectinput1" class="form-control" required>
                                </div>
                                <span asp-validation-for="@Model.GeneralSettings.DiscountHours" class="text-danger"></span>
                            </div>

                        </div> 
                        <div class="form-group row">
                            <label asp-for="@Model.GeneralSettings.VacationId" class="col-md-3 label-control" for="projectinput7">Vacation Day</label>
                            <div class="col-md-9">
                                @foreach (var vacation in Model.ListOfVacation)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="selectedVacations" value="@vacation.Id" id="vacation_@vacation.Id">
                                        <label class="form-check-label" for="vacation_@vacation.Id">
                                            @vacation.VacationDay
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="form-actions">
 
                            <button type="submit" class="btn btn-success">
                                <i class="icon-note"></i> Save
                            </button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>