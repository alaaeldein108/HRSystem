@model AttendanceViewModel

<section id="configuration">

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <div class="col">
                            <h4 class="card-title">Attendance and Batch departure request</h4>
                            <br />
                            <div class="row">
                                <form asp-controller="Attendance" asp-action="DownloadTemplate" class="form form-horizontal">
                                    <input type="submit" value="Download Templete" class="btn btn-blue">
                                </form>
                                <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</p>
                                <form asp-controller="Attendance" asp-action="UploadFilledTemplate" method="post" enctype="multipart/form-data">
                                    <input type="file" name="file" />
                                    <input type="submit" value="Upload Templete" class="btn btn-blue" />
                                </form>
                                <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</p>

                                <form asp-controller="Attendance" asp-action="BatchAttendance" enctype="multipart/form-data">
                                    @for (int i = 0; i < Model.ListOfAttendance.Count; i++)
                                    {
                                        <input type="hidden" asp-for="ListOfAttendance[i].EmployeeId" />
                                        <input type="hidden" asp-for="ListOfAttendance[i].Date" />
                                        <input type="hidden" asp-for="ListOfAttendance[i].CheckInTime" />
                                        <input type="hidden" asp-for="ListOfAttendance[i].CheckOutTime" />
                                    }
                                    <button type="submit" class="btn btn-success">
                                        <i class="icon-note"></i> Save Attendance
                                    </button>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="card-body collapse show">
                    <div class="card-block card-dashboard">
                        <p class="card-text">
                            DataTables has most features enabled by default,
                            so all you need to do to use it with your own ables is to call the construction
                        </p>
                        <div class="text-danger">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <table class="table table-striped table-bordered zero-configuration mt-40">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Date </th>
                                    <th>Check In Time</th>
                                    <th>Check Out Time</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                @foreach (var item in Model.ListOfAttendance)
                                {
                                    <tr>
                                        <td>@item.EmployeeId</td>
                                        <td>@item.Date.ToShortDateString()</td>
                                        <td>@item.CheckInTime</td>
                                        <td>@item.CheckOutTime</td>
                                        <form asp-controller="Attendance" asp-action="UpdateEmployeeAttendanceInSheet" method="get">
                                            <td>
                                                <input type="hidden" name="id" value="@item.EmployeeId" />
                                                <input type="hidden" name="date" value="@item.Date" />
                                                <button type="submit" class="btn btn-blue mr-1">
                                                    Update
                                                </button>

                                            </td>
                                        </form>
                                        <form asp-controller="Attendance" asp-action="DeleteEmployeeAttendance" asp-route-id="@item.Id" onsubmit="return confirmDelete()">
                                        <th>
                                            <button type="submit" class="btn btn-danger mr-1">
                                                <i class="icon-trash"></i> Delete
                                            </button>
                                        </th>
                                        </form>
                                    </tr>
                                }
                               
                            </tbody>

                        </table>
                        
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this record?');
    }
</script>
