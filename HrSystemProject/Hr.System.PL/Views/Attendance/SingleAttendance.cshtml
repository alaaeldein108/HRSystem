@model AttendanceViewModel

@{
    var Employees = new SelectList(ViewBag.Employees, "Id", "Name");
}


<section id="configuration">

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <div class="col">
                            <h4 class="card-title">Attendance and departure request</h4>
                        </div>
                    </div>
                </div>
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">Request A Form</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="px-3">
                        <form asp-controller="Attendance" asp-action="SingleAttendance" class="form form-horizontal" enctype="multipart/form-data">
                            <div class="form-body">
                                <div class="text-danger">
                                    <div asp-validation-summary="ModelOnly"></div>
                                </div>

                                <div class="form-group row">

                                    <label class="col-md-3 label-control" for="projectinput7">Employee Name : </label>
                                    <div class="col-md-9">
                                        <select asp-for="@Model.Attendance.EmployeeId" asp-items="Employees" id="projectinput7" class="form-control">
                                            <option>---  Select Employee Name  ---</option>

                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput9">Date: </label>
                                    <div class="col-md-9">
                                        <div class="position-relative has-icon-left">
                                            <input asp-for="@Model.Attendance.Date" type="date" id="dateInput" class="form-control">
                                            <div class="form-control-position">
                                                <i class="ft-message-square"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class=" row">
                                <div class="col-md-12">
                                    <div class=" row form-group">
                                        <div class="text-danger">
                                            <div asp-asp-validation-summary="all"></div>
                                        </div>
                                        <label class="col-md-3 label-control">Start time: </label>
                                        <div class="position-relative has-icon-left col-lg-9">
                                            <input asp-for="@Model.Attendance.CheckInTime" type="time" value="09:00" id="timeInput" class="form-control">
                                            <div class="form-control-position">
                                                <i class="ft-clock"></i>
                                            </div>
                                        </div>
                                        <span asp-validation-for="@Model.Attendance.CheckInTime" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class=" row form-group">
                                        <label class="col-md-3 label-control">End time: </label>
                                        <div class="position-relative has-icon-left col-lg-9">
                                            <input asp-for="@Model.Attendance.CheckOutTime" type="time" value="17:00" id="timeInput" class="form-control">
                                            <div class="form-control-position">
                                                <i class="ft-clock"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <span asp-validation-for="@Model.Attendance.CheckOutTime" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="form-actions">

                                <button type="submit" class="btn btn-success">
                                    <i class="icon-note"></i> Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
