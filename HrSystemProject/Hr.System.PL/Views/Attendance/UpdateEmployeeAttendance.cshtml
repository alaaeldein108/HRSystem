@model AttendanceViewModel
@{
    var Employees = new SelectList(ViewBag.Employees, "Id", "Name");
}

<section id="configuration">
    <div>
        <div class="row">
            <form asp-controller="Attendance" asp-action="UpdateEmployeeAttendance" method="post" enctype="multipart/form-data">
                
                <h4 class="form-section">
                    <i class="icon-user"></i> Attendance Details
                </h4>
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="@Model.Attendance.Id" class="col-form-label" hidden></label>
                        <input asp-for="@Model.Attendance.Id" class="form-control" readonly hidden />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Attendance.EmployeeId" class="col-form-label"></label>
                        <input asp-for="@Model.Attendance.EmployeeId" class="form-control"  readonly />
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Attendance.Date" class="col-form-label"></label>
                        <input asp-for="@Model.Attendance.Date" type="date" class="form-control" id="dateInput">
                        <span asp-validation-for="@Model.Attendance.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Attendance.CheckInTime" class="col-form-label"></label>
                        <input asp-for="@Model.Attendance.CheckInTime" type="time" class="form-control" value="@Model.Attendance.CheckInTime">
                        <div class="form-control-position">
                            <i class="ft-clock"></i>
                        </div>
                        <span asp-validation-for="@Model.Attendance.CheckInTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Attendance.CheckOutTime" class="col-form-label"></label>
                        <input asp-for="@Model.Attendance.CheckOutTime" type="time" class="form-control">
                        <div class="form-control-position">
                            <i class="ft-clock"></i>
                        </div>
                        <span asp-validation-for="@Model.Attendance.CheckOutTime" class="text-danger"></span>
                    </div>
                </div>
                <input type="submit" value="Update" class="btn btn-primary" />
                <a asp-controller="Attendance" asp-action="GetAttandances" class="btn btn-blue-grey">Back To List</a>
            </form>

        </div>

    </div>
</section>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
