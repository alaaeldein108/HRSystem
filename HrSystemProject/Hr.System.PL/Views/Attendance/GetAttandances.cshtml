@model AttendanceViewModel

@{
    var Employees = new SelectList(ViewBag.Employees, "Id", "Name");
}


<section id="configuration">
    
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <div class="col">
                            <h4 class="card-title">Attendance and departure request</h4>
                            <br />
                            <div class="row">
                                <form asp-controller="Attendance" asp-action="DownloadTemplate" class="form form-horizontal">
                                    <input type="submit" value="Download Templete" class="btn btn-success">
                                </form>
                                <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</p>
                                <form asp-controller="Attendance" asp-action="UploadFilledTemplate" method="post" enctype="multipart/form-data">
                                    <input type="file" name="file" />
                                    <input type="submit" value="Upload Templete" class="btn btn-success" />
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="card-body collapse show">
                    <div class="card-block card-dashboard">
                        <p class="card-text">
                            DataTables has most features enabled by default,
                            so all you need to do to use it with your own ables is to call the construction
                        </p>

                        <div class="row">
                            <div class="col-sm-12 col-md-3">
                                <div class="dataTables_length" id="DataTables_Table_0_length">
                                    <label>
                                        Show Date
                                        <select name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" class="form-control form-control-sm">
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">
                                                100
                                            </option>
                                        </select>
                                    </label>
                                </div>
                            </div>
                            <form asp-controller="Attendance" asp-action="GetAttandances" class="form form-horizontal">

                                <div class="row">
                                    <div class="col-sw-8">
                                        <input placeholder="Search Name" name="SearchValue" class="form-control" />
                                    </div>
                                    <p>&nbsp;&nbsp;&nbsp;</p>
                                    <div>
                                        <input type="submit" value="search" class="btn btn-success btn-block" />
                                    </div>
                                </div>

                            </form>


                        </div>
                        <table class="table table-striped table-bordered zero-configuration mt-40">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Id</th>
                                    <th>Date </th>
                                    <th>Check In Time</th>
                                    <th>Check Out Time</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListOfAttendance)
                                {
                                    <tr>
                                        <td>@item.Employee.Name</td>
                                        <td>@item.EmployeeId</td>
                                        <td>@item.Date</td>
                                        <td>@item.CheckInTime</td>
                                        <td>@item.CheckOutTime</td>
                                        <form asp-controller="Attendance" asp-action="UpdateEmployeeAttendance" method="get" asp-route-id="@item.Id">
                                        <th>
                                            <button type="submit" class="btn btn-blue mr-1">
                                                 Update
                                            </button>
                                        </th>
                                        </form>
                                        <form asp-controller="Attendance" asp-action="DeleteEmployeeAttendance" asp-route-id="@item.Id" onsubmit="return confirmDelete()">
                                            <th>
                                            <button type="submit" class="btn btn-danger mr-1">
                                                    <i class="icon-trash"></i> Delete
                                                </button>
                                            </th>
                                        </form>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">Request A Form</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="px-3">
                        <form asp-controller="Attendance" asp-action="SingleAttendance" class="form form-horizontal" enctype="multipart/form-data">
                            <div class="form-body">
                                <div class="text-danger">
                                    <div asp-validation-summary="ModelOnly"></div>
                                </div>
                               
                                <div class="form-group row">
                                    
                                    <label class="col-md-3 label-control"  for="projectinput7">Employee Name : </label>
                                    <div class="col-md-9">
                                        <select asp-for="@Model.Attendance.EmployeeId" asp-items="Employees" id="projectinput7" class="form-control">
                                            <option>---  Select Employee Name  ---</option>

                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput9">Date: </label>
                                    <div class="col-md-9">
                                        <div class="position-relative has-icon-left">
                                            <input asp-for="@Model.Attendance.Date" type="date" id="dateInput"  class="form-control">
                                            <div class="form-control-position">
                                                <i class="ft-message-square"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class=" row">
                                <div class="col-md-12">
                                    <div class=" row form-group">
                                        <div class="text-danger">
                                            <div asp-asp-validation-summary="all"></div>
                                        </div>
                                        <label class="col-md-3 label-control">Start time: </label>
                                        <div class="position-relative has-icon-left col-lg-9">
                                            <input asp-for="@Model.Attendance.CheckInTime" type="time" id="timeInput"  class="form-control">
                                            <div class="form-control-position">
                                                <i class="ft-clock"></i>
                                            </div>
                                        </div>
                                        <span asp-validation-for="@Model.Attendance.CheckInTime" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class=" row form-group">
                                        <label class="col-md-3 label-control">End time: </label>
                                        <div class="position-relative has-icon-left col-lg-9">
                                            <input asp-for="@Model.Attendance.CheckOutTime" type="time" id="timeInput" class="form-control">
                                            <div class="form-control-position">
                                                <i class="ft-clock"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <span asp-validation-for="@Model.Attendance.CheckOutTime" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="form-actions">

                                <button type="submit" class="btn btn-success">
                                    <i class="icon-note"></i> Save
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this record?');
    }
</script>