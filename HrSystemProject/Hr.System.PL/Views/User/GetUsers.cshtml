@using HrSystem.DAL.Identity
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
    int counter = 0;
}

<section id="configuration">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">Users Information</h4>
                    </div>
                </div>
                <div class="card-body collapse show">
                    <div class="card-block card-dashboard">
                        <p class="card-text">
                            DataTables has most features enabled by default,
                            so all you need to do to use it with your own ables is to call the construction
                        </p>

                        <div class="row">
                            <div class="col-sm-12 col-md-3">
                                <div class="dataTables_length" id="DataTables_Table_0_length">
                                    <label>
                                        Show
                                        <select name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" class="form-control form-control-sm">
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">
                                                100
                                            </option>
                                        </select>
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-1"></div>
                            <form asp-controller="User" asp-action="GetUsers">
                                <div class="col-lg-1"></div>
                                <div class="row">
                                    <div class="col-sw-8">
                                        <input placeholder="Search..." name="SearchValue" class="form-control" />
                                    </div>
                                    <p>&nbsp;&nbsp;&nbsp;</p>
                                    <div>
                                        <input type="submit" value="search" class="btn btn-success btn-block" />
                                    </div>
                                </div>
                            </form>
                            <div class="col-lg-1"></div>

                            @if (signInMangaer.IsSignedIn(User) && User.HasClaim("Permission", Permissions.AddUser))
                            {
                                <div class="col-lg-3">
                                    <button id="addRow" class="btn btn-primary mb-2">
                                        <i class="ft-plus"></i>&nbsp;
                                        <a asp-controller="User" asp-action="CreateUser"> Add New User</a>
                                    </button>
                                </div>
                                
                            }
                        </div>
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone Number</th>
                                    <th>Status</th>
                                    @if (signInMangaer.IsSignedIn(User) && User.HasClaim("Permission", Permissions.EditUser))
                                    {
                                        <th>Edit </th>
                                    }
                                    @if (signInMangaer.IsSignedIn(User) && User.HasClaim("Permission", Permissions.ViewInvoice))
                                    {
                                        <th>Delete</th>                                        
                                    }
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@{
                                                counter++;
                                            } @counter</td>
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        <td>@item.PhoneNumber</td>
                                            @if (item.IsActive)
                                            {
                                                <td>Enable</td>
                                            }
                                            else
                                            {
                                                <td>Disable</td>
                                            }
                                        @if (signInMangaer.IsSignedIn(User) && User.HasClaim("Permission", Permissions.EditUser))
                                        {
                                            <td>
                                                <a class="btn btn-info" asp-asp-controller="User" asp-action="UpdateUser" asp-route-id="@item.Id">
                                                    Update
                                                </a>
                                            </td>
                                        }
                                        @if (signInMangaer.IsSignedIn(User) && User.HasClaim("Permission", Permissions.EditUser))
                                        {
                                            <td>
                                                <form asp-asp-controller="User" asp-action="DeleteUser" asp-route-id="@item.Id" onsubmit="return confirmDelete()">
                                                    <button type="submit" class="btn btn-danger mr-1">
                                                        <i class="icon-trash"></i> Delete
                                                    </button>
                                                </form>
                                           
                                            </td>
                                        }
                                        <td>
                                            <a class="btn btn-blue-grey" asp-asp-controller="User" asp-action="Details" asp-route-id="@item.Id">
                                                View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this User?');
    }
</script>