@model SignUpViewModel
@{
	ViewData["Title"] = "SignUp";
	Layout = "";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		@* 		<div asp-validation-summary="All" class="text-danger"></div>*@
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<form asp-controller="Account" asp-action="SignUp" enctype="multipart/form-data">
			<input asp-for="@Model.Email" class="text email" type="email" name="email" placeholder="Email" required="">
			<span asp-validation-for="@Model.Email" class="text-danger"></span>
			<input asp-for="@Model.Password" class="text" type="password" name="password" placeholder="Password" required="">
			<span asp-validation-for="@Model.Password" class="text-danger"></span>
			<input asp-for="@Model.ConfirmPassword" class="text w3lpass" type="password" name="password" placeholder="Confirm Password" required="">
			<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

