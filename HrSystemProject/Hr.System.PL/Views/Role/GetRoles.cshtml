@using HrSystem.DAL.Identity
@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "Index";
    int counter = 0;
}
<section id="configuration">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">Roles Information</h4>
                    </div>
                </div>
                <div class="card-body collapse show">
                    <div class="card-block card-dashboard">
                        <p class="card-text">
                            DataTables has most features enabled by default,
                            so all you need to do to use it with your own ables is to call the construction
                        </p>

                        <div class="row">
                            <div class="col-sm-12 col-md-3">
                                <div class="dataTables_length" id="DataTables_Table_0_length">
                                    <label>
                                        Show
                                        <select name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" class="form-control form-control-sm">
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">
                                                100
                                            </option>
                                        </select>
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-1"></div>
                            <form asp-controller="Role" asp-action="GetRoles">
                                <div class="col-lg-1"></div>
                                <div class="row">
                                    <div class="col-sw-8">
                                        <input placeholder="Search..." name="SearchValue" class="form-control" />
                                    </div>
                                    <p>&nbsp;&nbsp;&nbsp;</p>
                                    <div>
                                        <input type="submit" value="search" class="btn btn-success btn-block" />
                                    </div>
                                </div>
                            </form>
                            <div class="col-lg-1"></div>
                            @if (signInMangaer.IsSignedIn(User) && User.HasClaim("Permission", Permissions.AddRole))
                            {
                                <div class="col-lg-3">
                                    <button id="addRow" class="btn btn-primary mb-2">
                                        <i class="ft-plus"></i>&nbsp;
                                        <a asp-controller="Role" asp-action="CreateRole"> Add New Role</a>
                                    </button>
                                </div>
                            }
                        </div>
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Role Name</th>
                                    <th>Creator</th>
                                    <th>Creation Time</th>
                                    <th>Modified By</th>
                                    <th>Modification Time</th>
                                    @if (signInMangaer.IsSignedIn(User) && User.HasClaim("Permission", Permissions.ViewUser))
                                    {
                                        <th>Users</th>
                                    }
                                    @if (signInMangaer.IsSignedIn(User) && User.HasClaim("Permission", Permissions.EditRole))
                                    {
                                        <th>Edit </th>                                        
                                    }
                                    @if (signInMangaer.IsSignedIn(User) && User.HasClaim("Permission", Permissions.ViewUser))
                                    {
                                        <th>Delete</th>                                       
                                    }
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @{
                                                counter++;
                                            } @counter
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.CreationRoles?.UserName</td>
                                        <td>@item.CreatedAt</td>
                                        <td>@item.ModificarionRoles?.UserName</td>
                                        <td>@item.ModificationTime</td>
                                        @if (signInMangaer.IsSignedIn(User) && User.HasClaim("Permission", Permissions.ViewUser))
                                        {
                                            <td>
                                                <a class="btn btn-orange" asp-asp-controller="Role" asp-action="GetRoleUsers" asp-route-id="@item.Id">
                                                    Users
                                                </a>
                                            </td>
                                        }
                                        @if (signInMangaer.IsSignedIn(User) && User.HasClaim("Permission", Permissions.EditRole))
                                        {
                                            <td>
                                                <a class="btn btn-info" asp-asp-controller="Role" asp-action="UpdateRole" asp-route-id="@item.Id">
                                                    Update
                                                </a>
                                            </td>
                                                                                    }
                                        <td>
                                            @if (signInMangaer.IsSignedIn(User) && User.HasClaim("Permission", Permissions.DeleteRole))
                                            {
                                                <form asp-asp-controller="Role" asp-action="DeleteRole" asp-route-id="@item.Id" onsubmit="return confirmDelete()">
                                                    <button type="submit" class="btn btn-danger mr-1">
                                                        <i class="icon-trash"></i> Delete
                                                    </button>
                                                </form>   
                                            }

                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this User?');
    }
</script>