@using HrSystem.DAL.Identity
@model IEnumerable<UserInRoleViewModel>
@{
    var RoleId = ViewBag.RoleId;
    int counter = 0;
}

<section id="configuration">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    
                </div>
                <div class="card-body collapse show">
                    <div class="card-block card-dashboard">
                        <div class="row">
                            <div class="col-lg-1"></div>
                            <div class="col-lg-1"></div>
                        </div>
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>User Name</th>
                                    <th>Email</th>
                                    <th>Phone Number</th>
                                    @if (signInMangaer.IsSignedIn(User) && User.HasClaim("Permission", Permissions.DeleteRole))
                                    {
                                        <th>Delete</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    if(item.IsSelected==true)
                                    {
                                        <tr>
                                            <td>
                                                @{
                                                    counter++;
                                                } @counter
                                            </td>
                                            <td>@item.UserName</td>
                                            <td>@item.Email</td>
                                            <td>@item.PhoneNumber</td>
                                            @if (signInMangaer.IsSignedIn(User) && User.HasClaim("Permission", Permissions.DeleteRole))
                                            {
                                                <td>
                                                    <form asp-asp-controller="Role" asp-action="DeleteUserInRole" asp-route-roleId="@RoleId" asp-route-userId="@item.UserId" onsubmit="return confirmDelete()">
                                                        <button type="submit" class="btn btn-danger mr-1">
                                                            <i class="icon-trash"></i> Delete
                                                        </button>
                                                    </form>

                                                </td>
                                                
                                            }
                                        </tr>
                                        
                                    }
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this User?');
    }
</script>