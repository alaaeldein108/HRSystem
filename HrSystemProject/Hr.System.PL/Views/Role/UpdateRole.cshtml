@model RoleViewModel
@{
    ViewData["Title"] = "Update";
    int counter = 0;
}

<section id="configuration">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">Update @Model.Name</h4>
                    </div>
                </div>
                <div class="card-body collapse show">
                    <div class="card-block card-dashboard">
                        <form asp-controller="Role" asp-action="UpdateRole">
                            <div class="col-lg-1"></div>
                            <div class="row">
                                <div class="form-group row">
                                    <label asp-for="@Model.Id" class="col-md-3 label-control" for="projectinput1" hidden></label>
                                    <div class="col-md-9">
                                        <input asp-for="@Model.Id" type="text" id="projectinput1" class="form-control" hidden>
                                    </div>
                                    <span asp-validation-for="@Model.Id" class="text-danger"></span>
                                </div>                                <label class="col-form-label"> Group Name</label>
                                <div class="col-sw-8">
                                    <input asp-for="@Model.Name" placeholder="Group Name" class="form-control" />
                                </div>
                                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                                <p>&nbsp;&nbsp;&nbsp;</p>
                                <div>
                                    <input type="submit" value="Save" class="btn btn-success btn-block" />
                                </div>
                            </div>
                            <div class="col-lg-1"></div>

                            <div class="col-lg-1"></div>
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Module Name</th>
                                        <th>Show</th>
                                        <th>Add</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>Employee</td>
                                        <td><input type="checkbox" name="Permissions" value="ViewEmployee" @(Model.Permissions.Contains("ViewEmployee") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="AddEmployee" @(Model.Permissions.Contains("AddEmployee") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="EditEmployee" @(Model.Permissions.Contains("EditEmployee") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="DeleteEmployee" @(Model.Permissions.Contains("DeleteEmployee") ? "checked" : "") /></td>
                                    </tr>
                                    <tr>
                                        <td>2</td>
                                        <td>General Setting</td>
                                        <td><input type="checkbox" name="Permissions" value="ViewGeneralSetting" @(Model.Permissions.Contains("ViewGeneralSetting") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="AddGeneralSetting" @(Model.Permissions.Contains("AddGeneralSetting") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="EditGeneralSetting" @(Model.Permissions.Contains("EditGeneralSetting") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="DeleteGeneralSetting" @(Model.Permissions.Contains("DeleteGeneralSetting") ? "checked" : "") /></td>
                                    </tr>
                                    <tr>
                                        <td>3</td>
                                        <td>Attendance</td>
                                        <td><input type="checkbox" name="Permissions" value="ViewAttendance" @(Model.Permissions.Contains("ViewAttendance") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="AddAttendance" @(Model.Permissions.Contains("AddAttendance") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="EditAttendance" @(Model.Permissions.Contains("EditAttendance") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="DeleteAttendance" @(Model.Permissions.Contains("DeleteAttendance") ? "checked" : "") /></td>
                                    </tr>
                                    <tr>
                                        <td>4</td>
                                        <td>Single Attendance</td>
                                        <td><input type="checkbox" name="Permissions" value="AddSingleAttendance" @(Model.Permissions.Contains("AddSingleAttendance") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="AddSingleAttendance" disabled /></td>
                                        <td><input type="checkbox" name="Permissions" value="AddSingleAttendance" disabled /></td>
                                        <td><input type="checkbox" name="Permissions" value="AddSingleAttendance" disabled /></td>

                                    </tr>
                                    <tr>
                                        <td>5</td>
                                        <td>Batch Attendance</td>
                                        <td><input type="checkbox" name="Permissions" value="AddBatchAttendance" @(Model.Permissions.Contains("AddBatchAttendance") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="AddBatchAttendance" disabled /></td>
                                        <td><input type="checkbox" name="Permissions" value="AddBatchAttendance" disabled /></td>
                                        <td><input type="checkbox" name="Permissions" value="AddBatchAttendance" disabled /></td>

                                    </tr>
                                    <tr>
                                        <td>6</td>
                                        <td>Salary Report</td>
                                        <td><input type="checkbox" name="Permissions" value="ViewSalaryReport" @(Model.Permissions.Contains("ViewSalaryReport") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="ViewSalaryReport" disabled /></td>
                                        <td><input type="checkbox" name="Permissions" value="ViewSalaryReport" disabled /></td>
                                        <td><input type="checkbox" name="Permissions" value="ViewSalaryReport" disabled /></td>

                                    </tr>
                                    <tr>
                                        <td>6</td>
                                        <td>Invoice</td>
                                        <td><input type="checkbox" name="Permissions" value="ViewInvoice" @(Model.Permissions.Contains("ViewInvoice") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="ViewInvoice" disabled /></td>
                                        <td><input type="checkbox" name="Permissions" value="ViewInvoice" disabled /></td>
                                        <td><input type="checkbox" name="Permissions" value="ViewInvoice" disabled /></td>

                                    </tr>
                                    <tr>
                                        <td>7</td>
                                        <td>Users</td>
                                        <td><input type="checkbox" name="Permissions" value="ViewUser" @(Model.Permissions.Contains("ViewUser") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="AddUser" @(Model.Permissions.Contains("AddUser") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="EditUser" @(Model.Permissions.Contains("EditUser") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="DeleteUser" @(Model.Permissions.Contains("DeleteUser") ? "checked" : "") /></td>
                                    </tr>
                                    <tr>
                                        <td>8</td>
                                        <td>Permissions</td>
                                        <td><input type="checkbox" name="Permissions" value="ViewRole" @(Model.Permissions.Contains("ViewRole") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="AddRole" @(Model.Permissions.Contains("AddRole") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="EditRole" @(Model.Permissions.Contains("EditRole") ? "checked" : "") /></td>
                                        <td><input type="checkbox" name="Permissions" value="DeleteRole" @(Model.Permissions.Contains("DeleteRole") ? "checked" : "") /></td>
                                    </tr>

                                </tbody>

                            </table>

                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}