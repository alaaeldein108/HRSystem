
@model EmployeeViewModel

<section id="configuration">
    <div>
        <div class="row">
            <form asp-controller="Employee" asp-action="UpdateEmployee" enctype="multipart/form-data">
                <h4 class="form-section">
                    <i class="icon-user"></i> Personal Details
                </h4>
                <div class="text-danger">
                    <div asp-validation-summary="All"></div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="@Model.Id" class="col-form-label"></label>
                        <input asp-for="@Model.Id" class="form-control" readonly />
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Name" class="col-form-label"></label>
                        <input asp-for="@Model.Name" class="form-control" value="@Model.Name">
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Address" class="col-form-label"></label>
                        <input asp-for="@Model.Address" class="form-control" value="@Model.Address">
                        <span asp-validation-for="@Model.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Email" class="col-form-label"></label>
                        <input asp-for="@Model.Email" class="form-control" value="@Model.Email">
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.PhoneNumber" class="col-form-label"></label>
                        <input asp-for="@Model.PhoneNumber" class="form-control" value="@Model.PhoneNumber">
                        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                    </div>
                    <h4 class="form-section">
                        <i class="icon-book-open"></i>Other Details
                    </h4>
                   
                    <div class="form-group">
                        <label asp-for="@Model.DateOfBirth" class="col-form-label"></label>
                        <input asp-for="@Model.DateOfBirth" type="date" class="form-control" id="dateInput">
                        <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Gender" class="col-form-label"></label>
                        <select asp-for="@Model.Gender" class="form-control" value="@Model.Gender">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                        <span asp-validation-for="@Model.Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.HiringDate" class="col-form-label"></label>
                        <input asp-for="@Model.HiringDate" type="date" class="form-control" id="dateInput" >
                        <span asp-validation-for="@Model.HiringDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CheckInTime" class="col-form-label"></label>
                        <input asp-for="@Model.CheckInTime" type="time" class="form-control" value="@Model.CheckInTime">
                        <div class="form-control-position">
                            <i class="ft-clock"></i>
                        </div>
                        <span asp-validation-for="@Model.CheckInTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CheckOutTime" class="col-form-label"></label>
                        <input asp-for="@Model.CheckOutTime" type="time" class="form-control">
                        <div class="form-control-position">
                            <i class="ft-clock"></i>
                        </div>
                        <span asp-validation-for="@Model.CheckOutTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Salary" class="col-form-label"></label>
                        <input asp-for="@Model.Salary" class="form-control" value="@Model.Salary">
                        <span asp-validation-for="@Model.Salary" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.NationalId" class="col-form-label"></label>
                        <input asp-for="@Model.NationalId" class="form-control" value="@Model.NationalId">
                        <span asp-validation-for="@Model.NationalId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Nationality" class="col-form-label"></label>
                        <input asp-for="@Model.Nationality" class="form-control" value="@Model.Nationality">
                        <span asp-validation-for="@Model.Nationality" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Image" class="col-form-label"></label>
                        <img src="~/Files/Images/@Model.ImageUrl" height="200" width="200" />
                        <input asp-for="@Model.ImageUrl" type="hidden" />
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Choose another Image </label>
                        <input type="file" asp-for="@Model.Image" class="form-control">
                    </div>
                    
                    <div class="form-group row">
                        <label asp-for="@Model.IsActive" class="col-form-label"></label>
                        <div class="col-md-9">
                            <input asp-for="@Model.IsActive" type="checkbox" class="form-control">
                        </div>
                        <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Notes" class="col-form-label"></label>
                        <textarea asp-for="@Model.Notes" rows="5" class="form-control"></textarea>
                        <span asp-validation-for="@Model.Notes" class="text-danger"></span>
                    </div>
                </div>

                <input type="submit" value="Update" class="btn btn-primary" />
                <a asp-controller="Employee" asp-action="EmployeeInformation" class="btn btn-blue-grey">Back To List</a>
            </form>

        </div>

    </div>
</section>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
