@model EmployeeViewModel

<section id="horizontal-form-layouts">
	
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title-wrap bar-success">
						<h4 class="card-title" id="horz-layout-basic">Employee Information</h4>
					</div>
					<p class="mb-0">This is the basic horizontal form with labels on left and cost estimation form is the default position.</p>
				</div>
				<div class="card-body">
					<div class="px-3">
					
						<form asp-controller="Employee" asp-action="Create" enctype="multipart/form-data">
							<div class="form-body">
								<h4 class="form-section">
									<i class="icon-user"></i> Personal Details
								</h4>
							
								<div class="form-group row">
									<label asp-for="@Model.Name" class="col-md-3 label-control" for="projectinput1"></label>
									<div class="col-md-9">
										<input asp-for="@Model.Name" type="text" id="projectinput1" class="form-control">
									</div>
 									<span asp-validation-for="@Model.Name" class="text-danger"></span>
 								</div>
								<div class="form-group row">
									<label asp-for="@Model.Address" class="col-md-3 label-control" for="projectinput2"></label>
									<div class="col-md-9">
										<input asp-for="@Model.Address" type="text" id="projectinput2" class="form-control" >
									</div>
									<span asp-validation-for="@Model.Address" class="text-danger"></span>
								</div>

								<div class="form-group row">
									<label asp-for="@Model.Email" class="col-md-3 label-control" for="projectinput3"></label>
									<div class="col-md-9">
										<input asp-for="@Model.Email" type="text" id="projectinput3" class="form-control">
									</div>
									<span asp-validation-for="@Model.Email" class="text-danger"></span>
								</div>

								<div class="form-group row">
									<label asp-for="@Model.PhoneNumber" class="col-md-3 label-control" for="projectinput4"></label>
									<div class="col-md-9">
										<input asp-for="@Model.PhoneNumber" type="text" id="projectinput4" class="form-control">
									</div>
									<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
								</div>
								<h4 class="form-section">
									<i class="icon-book-open"></i>Other Details
								</h4>
								<div class="form-group row">
									<label asp-for="@Model.DateOfBirth" class="col-md-3 label-control" for="projectinput9"></label>
									<div class="col-md-9">
										<div class="position-relative has-icon-left">
											<input asp-for="@Model.DateOfBirth" type="date" id="timesheetinput3" class="form-control">
											<div class="form-control-position">
												<i class="ft-message-square"></i>
											</div>
										</div>
									</div>
									<span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
								</div>
							</div>
							<div class="form-group row">
								<label asp-for="@Model.Gender" class="col-md-3 label-control" for="projectinput9"></label>
								<div class="col-md-9">
									<select asp-for="@Model.Gender" id="projectinput9" class="form-control">
										<option value="Male">Male</option>
										<option value="Female">Female</option>
									</select>
								</div>
							</div>
							<div class="form-group row">
								<label asp-for="@Model.HiringDate" class="col-md-3 label-control" for="projectinput10"></label>
								<div class="col-md-9">
									<input asp-for="@Model.HiringDate" type="date" id="dateInput"  class="form-control">
								</div>
								<span asp-validation-for="@Model.HiringDate" class="text-danger"></span>
							</div>
							<div class=" row">
								<div class="col-md-12">
									<div class=" row form-group">
										<label asp-for="@Model.CheckInTime" class="col-md-3 label-control"></label>
										<div class="position-relative has-icon-left col-lg-9">
											<input asp-for="@Model.CheckInTime" type="time" id="timeInput" value="09:00" class="form-control">
											<div class="form-control-position">
												<i class="ft-clock"></i>
											</div>
										</div>
										<span asp-validation-for="@Model.CheckInTime" class="text-danger"></span>
									</div>
								</div>
								<div class="col-md-12">
									<div class=" row form-group">
										<label asp-for="@Model.CheckOutTime" class="col-md-3 label-control"></label>
										<div class="position-relative has-icon-left col-lg-9">
											<input asp-for="@Model.CheckOutTime" type="time" id="timeInput" value="17:00" class="form-control">
											<div class="form-control-position">
												<i class="ft-clock"></i>
											</div>
										</div>
										<span asp-validation-for="@Model.CheckOutTime" class="text-danger"></span>
									</div>
								</div>
							</div>
							<div class="form-group row">
								<label asp-for="@Model.Salary" class="col-md-3 label-control" for="projectinput11"></label>
								<div class="col-md-9">
									<input asp-for="@Model.Salary"  id="projectinput11" class="form-control">
								</div>
								<span asp-validation-for="@Model.Salary" class="text-danger"></span>
							</div>
							<div class="form-group row">
								<label asp-for="@Model.NationalId" class="col-md-3 label-control" for="projectinput11"></label>
								<div class="col-md-9">
									<input asp-for="@Model.NationalId" id="numberInput" class="form-control">
								</div>
								<span asp-validation-for="@Model.NationalId" class="text-danger"></span>
							</div>
							<div class="form-group row">
								<label asp-for="@Model.Nationality" class="col-md-3 label-control" for="projectinput12"></label>
								<div class="col-md-9">
									<input asp-for="@Model.Nationality" type="text" id="projectinput12" class="form-control">
								</div>
								<span asp-validation-for="@Model.Nationality" class="text-danger"></span>
							</div>
							<div class="form-group row">
								<label asp-for="@Model.Image" class="col-md-3 label-control"></label>
								<div class="col-md-9">
									<label id="projectinput8" class="file center-block">
										<input asp-for="@Model.Image" type="file" id="file">
										<span class="file-custom"></span>
									</label>
								</div>
								<span asp-validation-for="@Model.Image" class="text-danger"></span>
							</div>
							<div class="form-group row">
								<label asp-for="@Model.IsActive" class="col-md-3 label-control" for="projectinput12"></label>
								<div class="col-md-9">
									<input asp-for="@Model.IsActive" type="checkbox" id="projectinput12" class="form-control" >
								</div>
								<span asp-validation-for="@Model.IsActive" class="text-danger"></span>
							</div>
							<div class="form-group row">
								<label asp-for="@Model.Notes" class="col-md-3 label-control" for="projectinput9"></label>
								<div class="col-md-9">
									<textarea asp-for="@Model.Notes" id="projectinput9" rows="5" class="form-control" ></textarea>
								</div>
							</div>
							<div class="form-actions">
							</div>
								<input type="submit" class="btn btn-success">
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

</section>
<script>
	document.getElementById('numberInput').addEventListener('input', function (e) {
		if (this.value.length > 14) {
			this.value = this.value.slice(0, 14);
		}
	});
</script>
@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}